<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">





<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="350dp">
                <ImageView
                    android:src="@drawable/logobawahbaru"
                    android:layout_centerInParent="true"
                    android:layout_width="200dp"
                    android:layout_height="150dp"/>
            </RelativeLayout>

            <LinearLayout

                android:orientation="vertical"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrim"
                    android:textSize="12sp"
                    android:text="Nama Pengguna disesuaikan dengan blok masing-masing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"

                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:text="Contoh Nama Pengguna : Blok1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="true"

                    app:boxCornerRadiusBottomStart="24dp"
                    app:boxCornerRadiusBottomEnd="30dp"
                    app:boxCornerRadiusTopEnd="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:boxCornerRadiusTopStart="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Nama Pengguna"
                        android:id="@+id/namalogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_account_circle_24"
                        android:fontFamily="casual"
                        android:drawablePadding="12dp"
                        android:importantForAutofill="no"
                        android:layout_marginBottom="10dp"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrim"
                    android:textSize="12sp"
                    android:text="Untuk password sama semua dan huruf besar yaitu :"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:text="Password  : P3DHIDROPONIK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxCornerRadiusBottomStart="24dp"
                    app:boxCornerRadiusBottomEnd="24dp"
                    app:boxCornerRadiusTopEnd="24dp"
                    app:boxCornerRadiusTopStart="24dp"
                    app:hintEnabled="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:passwordToggleEnabled="true">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordlogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_vpn_key_24"
                        android:fontFamily="casual"
                        android:drawablePadding="12dp"
                        android:hint="Password"
                        android:importantForAutofill="no"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnlogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:layout_marginBottom="2dp"
                    android:paddingBottom="16dp"
                    android:text="Login"
                    android:backgroundTint="@color/warna_statusbar"
                    android:textColor="#ffffff"
                    app:cornerRadius="24dp"/>
            </RelativeLayout>


        </LinearLayout>

</ScrollView>
</RelativeLayout>